#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter number of students: ";
    cin >> n;

    string names[100];
    int ages[100];
    float marks[100];

    for (int i = 0; i < n; i++) {
        cout << "\nEnter details for student " << i + 1 << ":\n";
        cout << "Name: ";
        cin.ignore(); // Clear input buffer
        getline(cin, names[i]);
        cout << "Age: ";
        cin >> ages[i];
        cout << "Marks: ";
        cin >> marks[i];
    }

    cout << "\nStudent Details:\n";
    for (int i = 0; i < n; i++) {
        cout << "Student " << i + 1 << ": ";
        cout << "Name: " << names[i] << ", Age: " << ages[i] << ", Marks: " << marks[i] << endl;
    }

    return 0;
}
